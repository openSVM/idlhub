{
  "name": "idlhub",
  "version": "1.0.0",
  "type": "module",
  "description": "idlhub - a comprehensive, searchable registry of Interface Definition Language (IDL) files for Solana protocols. This repository provides a centralized location for discovering and accessing IDLs across the Solana ecosystem.",
  "main": "index.js",
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "build": "vite build",
    "preview": "vite preview",
    "test": "node mcp-server/test/basic.test.js",
    "test:anchor": "anchor test",
    "test:api-mcp": "node mcp-server/test/api-server.test.js",
    "test:api": "node api/test/server.test.js",
    "test:api:unit": "node api/test/server.unit.test.js",
    "test:mcp-integration": "node api/test/mcp-integration.test.cjs",
    "test:full-integration": "node api/test/full-integration.test.cjs",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test:api:unit && npm run test && npm run test:api && npm run test:mcp-integration && npm run test:e2e",
    "mcp:stdio": "node mcp-server/src/index.js",
    "mcp:websocket": "node mcp-server/src/websocket-server.js",
    "mcp:api": "node mcp-server/src/api-server.js",
    "mcp:jsonrpc": "node mcp-server/src/jsonrpc-server.js",
    "mcp:start": "npm run mcp:stdio",
    "qdrant:init": "node scripts/init-qdrant.js",
    "api:start": "node api/server-arweave.js",
    "api:start:legacy": "node api/server.js",
    "api:dev": "node api/server-arweave.js",
    "arweave:upload": "cd arweave && npm run upload",
    "arweave:upload:dry": "cd arweave && npm run upload:dry",
    "arweave:list": "cd arweave && node fetch.js list",
    "arweave:search": "cd arweave && node fetch.js search",
    "protocol:deploy": "npx ts-node scripts/deploy-protocol.ts",
    "protocol:track-volume": "npx ts-node scripts/track-volume.ts",
    "protocol:issue-badges": "npx ts-node scripts/issue-badges.ts",
    "protocol:init": "npx ts-node scripts/init-protocol.ts",
    "protocol:test": "npx ts-node scripts/test-protocol.ts",
    "protocol:test:advanced": "npx ts-node scripts/test-advanced.ts",
    "protocol:test:lifecycle": "npx ts-node scripts/test-market-lifecycle.ts",
    "protocol:test:sdk": "npx ts-node scripts/test-sdk.ts",
    "sdk:build": "cd sdk && npm run build",
    "sim:run": "npx ts-node simulation/index.ts",
    "sim:quick": "npx ts-node simulation/index.ts --rounds=5 --delay=1000",
    "sim:long": "npx ts-node simulation/index.ts --rounds=30 --delay=2000",
    "sim:debug": "npx ts-node simulation/index.ts --debug",
    "attack": "npx ts-node attack-framework/index.ts",
    "attack:scan": "npx ts-node attack-framework/index.ts --scan",
    "attack:quick": "npx ts-node attack-framework/index.ts --rounds=5 --mock",
    "attack:full": "npx ts-node attack-framework/index.ts --rounds=20 --parallel",
    "attack:mev": "npx ts-node attack-framework/index.ts --vectors=SANDWICH_ATTACK,JIT_LIQUIDITY,ORACLE_FRONT_RUN",
    "attack:flash": "npx ts-node attack-framework/index.ts --vectors=FLASH_LOAN_STAKE,FLASH_LOAN_VOTE,LIQUIDITY_DRAIN",
    "bot:telegram": "npx ts-node bots/telegram-bot.ts",
    "bot:twitter": "npx ts-node bots/twitter-bot.ts",
    "bot:market-maker": "npx ts-node bots/ai-market-maker.ts",
    "bot:all": "npm-run-all --parallel bot:telegram bot:twitter bot:market-maker"
  },
  "bin": {
    "idlhub-mcp": "./mcp-server/src/index.js"
  },
  "keywords": [
    "solana",
    "idl",
    "mcp",
    "model-context-protocol",
    "anchor"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@irys/sdk": "^0.2.0",
    "@modelcontextprotocol/sdk": "^1.19.1",
    "@qdrant/js-client-rest": "^1.13.0",
    "axios": "^1.6.2",
    "bs58": "^5.0.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express": "^4.18.2",
    "got": "^11.8.6",
    "jszip": "^3.10.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "twitter-api-v2": "^1.18.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@playwright/test": "^1.57.0",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.98.4",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "npm-run-all": "^4.1.5",
    "pixelmatch": "^7.1.0",
    "playwright": "^1.57.0",
    "pngjs": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.4.21"
  }
}
